<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/find"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindOutActivity"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/contentFind"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/btnback"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            app:srcCompat="@drawable/ic_b" />

        <androidx.cardview.widget.CardView
            android:id="@+id/show_letsus"
            android:layout_width="350dp"
            android:layout_height="400dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            app:cardBackgroundColor="#39FFDB"
            app:cardCornerRadius="31.5dp"
            app:cardElevation="25dp"
            android:outlineSpotShadowColor="#39FFDB">

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/search_1" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="210dp"
                android:elevation="20dp"
                android:shadowColor="@color/black"
                android:text="Let's us \n Decide \n For you"
                android:textColor="@color/white"
                android:textSize="50dp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/fineOut"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@+id/show_letsus"
            android:layout_centerInParent="true"
            android:layout_marginTop="150dp"
            android:backgroundTint="#FF0099"
            android:elevation="15dp"
            android:shadowColor="#FF0099"
            android:shadowDx="5"
            android:shadowDy="10"
            android:shadowRadius="50"
            android:text="Find Out"
            android:textAllCaps="false"
            android:textSize="18dp"
            app:cornerRadius="31.5dp" />
    </RelativeLayout>
</FrameLayout>