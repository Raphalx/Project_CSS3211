<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment"
    android:background="@color/white">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/profie_pic_show"
                android:layout_width="315dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="31.5dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/loc_profile"
                android:layout_width="320dp"
                android:layout_height="200dp"
                android:layout_below="@+id/profie_pic_show"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:outlineSpotShadowColor="#39B8FF"
                app:cardBackgroundColor="#39FFDB"
                app:cardCornerRadius="31.5dp"
                app:cardElevation="50dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/username_show"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Username"
                        android:textColor="@color/white"
                        android:textSize="50dp"
                        android:textStyle="bold" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/fav_dish"
                android:layout_width="320dp"
                android:layout_height="75dp"
                android:layout_below="@+id/loc_profile"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="#FF0099"
                app:cardCornerRadius="31.5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Favourite Dish"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/his"
                android:layout_width="170dp"
                android:layout_height="150dp"
                android:layout_below="@id/fav_dish"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="#FFE600"
                app:cardCornerRadius="31.5dp">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/framehistory" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="History"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/setting"
                android:layout_width="170dp"
                android:layout_height="150dp"
                android:layout_below="@id/fav_dish"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                app:cardBackgroundColor="#39FFDB"
                app:cardCornerRadius="31.5dp">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/framesettings" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Setting"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/signout"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_below="@+id/his"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/material_on_background_disabled"
                android:text="Sign Out"
                android:textSize="12sp"
                app:cornerRadius="31.5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="225dp"
                android:layout_below="@+id/signout"
                android:orientation="vertical">

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</FrameLayout>